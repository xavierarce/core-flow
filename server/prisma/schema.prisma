generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


enum AccountType {
  CASH         // Checking accounts
  SAVINGS      // LEP, Livret A
  INVESTMENT   // PEA, ETFs
  TRADING      // High-risk/Leverage accounts
}

model Account {
  id           String        @id @default(uuid())
  name         String        // e.g., "Main SG", "Boursorama PEA"
  institution  String        // e.g., "Société Générale"
  type         AccountType   @default(CASH)
  balance      Decimal       @db.Decimal(15, 2)
  currency     String        @default("EUR")
  isAutomated  Boolean       @default(false)
  transactions Transaction[]
  updatedAt    DateTime      @updatedAt
}

// 1. Create an Enum (Fixed list of options)
enum TransactionSource {
  MANUAL // Added by you
  BANK   // Synced from API (Read-Only)
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique             // "Food", "Transport"
  type      String   @default("EXPENSE") // "EXPENSE" or "INCOME"
  color     String   @default("#64748b") // Hex Code for the chart
  icon      String?                      // Optional: "shopping-cart", etc.
  
  transactions Transaction[]
  createdAt    DateTime @default(now())
}

model Transaction {
  id          String   @id @default(uuid())
  accountId   String
  account     Account  @relation(fields: [accountId], references: [id])
  amount      Decimal  @db.Decimal(15, 2)
  description String

  categoryId  String?  
  category    Category? @relation(fields: [categoryId], references: [id])
  
  date        DateTime
  isRecurring Boolean  @default(false)
  source      TransactionSource @default(MANUAL)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}